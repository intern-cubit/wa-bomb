{
    "name": "wa-bomb",
    "version": "0.0.3",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "dist": "electron-builder --dir",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "An Electron app for sending emails with a FastAPI backend.",
    "devDependencies": {
        "electron": "^29.4.0",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "electron-is-dev": "^3.0.1",
        "electron-log": "^5.4.1",
        "electron-updater": "^6.6.2",
        "node-fetch": "^3.3.2"
    },
    "build": {
        "appId": "com.cubitdynamics.wa-bomb",
        "productName": "WA BOMB",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "package.json",
            "build/**/*",
            "backend/dist/fastapibackend.exe",
            {
                "from": "backend/dist",
                "to": "backend/dist",
                "filter": [
                    "**/*"
                ]
            },
            "frontend/dist/**/*"
        ],
        "extraResources": [
            {
                "from": "backend/dist/fastapibackend.exe",
                "to": "fastapibackend.exe"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico",
            "publisher": "Obzen Technolabs"
        },
        "nsis": {
            "installerIcon": "build/installerIcon.ico",
            "uninstallerIcon": "build/uninstallerIcon.ico",
            "allowToChangeInstallationDirectory": true,
            "oneClick": false
        },
        "publish": {
            "provider": "github",
            "owner": "intern-cubit",
            "repo": "wa-bomb",
            "releaseType": "release",
            "publishAutoUpdate": true
        }
    }
}
